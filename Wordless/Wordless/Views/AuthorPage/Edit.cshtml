@model Wordless.Models.Book

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>



<div class="form-horizontal row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <h4>Book</h4>
        <hr />
        <form role="form" action="~/AuthorPage/Edit" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.BookId)

            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(m => m.Title)
                @Html.EditorFor(m => m.Title, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(m => m.TimesPurchased)
                @Html.EditorFor(m => m.TimesPurchased, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(m => m.Genre)
                @Html.EnumDropDownListFor(m => m.Genre, htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="form-group col-lg-12 col-md-12 col-sm-12 col-xs-12">
                @Html.LabelFor(m => m.Price)
                @Html.EditorFor(m => m.Price, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
